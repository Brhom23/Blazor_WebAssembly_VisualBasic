@inherits Blazor_WebAssembly_VisualBasic.Client.BL.App
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        @*Blazor_WebAssembly_VisualBasic.Client, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null*@
        <Found Context="routeData">
            @if (isInitialized) //لا يتم تحميل الصفحة إلا بعد ما تكتمل التهيئة
            {
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated != true)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <p role="alert">You are not authorized to access this resource.</p>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
            }
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
